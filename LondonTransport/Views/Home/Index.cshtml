@{
    ViewBag.Title = "London Transport API. Usage";
}

@section scripts{ 
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBV7A_cvEIGd-iQ9KSvtd4TnV5dooBN07Y">
    </script>

    <script src="~/Scripts/lib/jquery.min.js"></script>
    <script src="~/Scripts/lib/bootstrap.min.js"></script>
    <script src="~/Scripts/lib/angular-bundle.min.js"></script>
    
    <script src="~/Scripts/transport-app.js"></script>
    <script src="~/Scripts/transport-service.js"></script>
}
<div ng-app="londonApp" ng-controller="JourneyController">
    <div class="row journey-planner">

        <div class="col-xs-4">
            <div mass-autocomplete class="autocomplete">
                <input type="text" ng-model="from.name" placeholder="From"
                       mass-autocomplete-item="autocomplete_from_options">
            </div>
        </div>
        <div class="col-xs-2">
            <button ng-click="reverseLocations()">REVERSE</button>
        </div>
        <div class="col-xs-2">
            <button ng-click="getJourneys(from,to)">PLAN JOURNEY</button>
        </div>
        <div class="col-xs-4">
            <div mass-autocomplete class="autocomplete">
                <input type="text" ng-model="to.name"  placeholder="To"
                       mass-autocomplete-item="autocomplete_to_options">
            </div>
        </div>

    </div>

    <!-- List with disambiguations or List of journeys -->
    <div class="row" ng-show="journeys.hasOwnProperty('$type')">

        <!-- Disambiguous results -->
        <div class="row possible-journeys" ng-show="journeys.hasOwnProperty('toLocationDisambiguation') || journeys.hasOwnProperty('fromLocationDisambiguation')">
            <div class="col-md-6">
                <div class="info-message alert alert-warning" ng-show="journeys.fromLocationDisambiguation.matchStatus != 'identified'"><span>We found more than one location matching <strong>'{{from.name}}'</strong></span></div>
                <div class="list-group">
                    <a ng-click="pickDepartureAddress(j)" ng-class="from.name == j.place.commonName ? 'list-group-item active' : 'list-group-item'" ng-repeat="j in journeys.fromLocationDisambiguation.disambiguationOptions">
                        {{j.place.commonName}}
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="info-message alert alert-warning" ng-show="journeys.toLocationDisambiguation.matchStatus != 'identified'"> <span>We found more than one location matching <strong>'{{to.name}}'</strong></span></div>
                <div class="list-group">
                    <a ng-click="pickArrivalAddress(j)" ng-class="to.name == j.place.commonName ? 'list-group-item active' : 'list-group-item'" ng-repeat="j in journeys.toLocationDisambiguation.disambiguationOptions">
                        {{j.place.commonName}}
                    </a>
                </div>
            </div>

        </div>

        <!-- Journeys -->
        <div class="row journeys" ng-show="journeys.hasOwnProperty('journeys')">
            <div class="list-group">
                <a class="list-group-item-info list-group-item journey" ng-repeat="j in journeys.journeys" ng-click="changeCurrentJourney(j)">
                    <div class="row">
                        <div class="bound-time col-md-3">
                            Departs: <span>{{j.startDateTime.getHours() + ':' + checkTime(j.startDateTime.getMinutes())}}</span>&nbsp;&nbsp;&nbsp;
                            Arrives: <span>{{j.arrivalDateTime.getHours() + ':' + checkTime(j.arrivalDateTime.getMinutes())}}</span>
                        </div>
                        <div class="col-md-6">
                            <ul class="journey-steps clearfix">
                                <li ng-repeat="l in j.legs" ng-class="l.mode.name + '-icon' + ' text-hide'">
                                    {{l.instruction.summary}}
                                    <span class="walking"></span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-1 journey-time"><span class="glyphicon glyphicon-time"></span> {{j.duration}} min</div>
                        <div class="col-md-2 show-more"><span ng-click="j.isDetailsVisible = !j.isDetailsVisible">Show more <span class="glyphicon glyphicon-chevron-down"></span></span> </div>
                    </div>
                    <div class="row" ng-show="j.isDetailsVisible">
                        <div class="col-md-12">
                            <ul class="list-group journey-description">
                                <li ng-repeat="l in j.legs" class="list-group-item list-group-item-text">
                                    <div ng-class="'journey-step ' + l.mode.name + '-icon'"></div>
                                    <div class="journey-step-time">{{l.duration}} min</div>
                                    <div class="journey-step-descrip">{{l.instruction.summary}}</div>
                                    <div class="clearfix"></div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </a>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-xs-6 col-xs-offset-3">
            Or you can specify arrival and destination points just clicking of the map
        </div>
    </div>

    <div class="row map">
        <div class="col-xs-12">
            <ng-map  center="51.50,-0.12" zoom="10" on-click="placeMarker()">
                <marker position="{{toMarker}}" icon="{{toMarkerIcon}}"></marker>
                <marker position="{{fromMarker}}" icon="{{fromMarkerIcon}}"></marker>
                <shape ng-repeat="leg in currentJourney.legs" name="polyline" id="foo"
                       path="{{leg.path.lineString}}"
                       stroke-color="{{leg.color}}"
                       stroke-opacity="0.6"
                       stroke-weight="2">
                </shape>
            </ng-map>
        </div>
    </div>
</div>
